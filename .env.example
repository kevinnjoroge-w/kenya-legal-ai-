# =============================================================================
# Kenya Legal AI â€” Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# LLM Provider (choose one or multiple)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Model configuration
LLM_PROVIDER=openai                    # openai | anthropic | ollama
LLM_MODEL=gpt-4o                      # gpt-4o | claude-3-5-sonnet | llama3:70b
LLM_TEMPERATURE=0.4
DRAFTING_TEMPERATURE=0.2
EMBEDDING_MODEL=text-embedding-3-large # text-embedding-3-large | bge-large-en-v1.5

# -----------------------------------------------------------------------------
# Data Sources
# -----------------------------------------------------------------------------
LAWS_AFRICA_API_KEY=your-laws-africa-api-key
LAWS_AFRICA_BASE_URL=https://api.laws.africa/v3

# -----------------------------------------------------------------------------
# Vector Database (Qdrant)
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=kenya_legal_docs
# QDRANT_API_KEY=your-qdrant-cloud-key  # Only for Qdrant Cloud

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/kenya_legal_ai

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Kenya Legal AI"
APP_ENV=development                    # development | staging | production
APP_PORT=8000
APP_HOST=0.0.0.0
LOG_LEVEL=INFO                         # DEBUG | INFO | WARNING | ERROR

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# Data Storage
# -----------------------------------------------------------------------------
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
METADATA_DIR=data/metadata
